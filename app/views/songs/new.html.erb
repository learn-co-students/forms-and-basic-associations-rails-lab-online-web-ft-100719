<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name%>
  <%= f.text_field :artist_name %>

  <%= f.label :genre%>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name") %>
  <input name='song[note_contents][note_contents][]' id='song_notes_attributes_0_content'>
  <input name='song[note_contents][note_contents][]'id='song_notes_attributes_1_content'>

  <%= f.fields_for :notes do |note|%> 
  <%= note.label :note %>
  <%= note.text_field :content %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>


