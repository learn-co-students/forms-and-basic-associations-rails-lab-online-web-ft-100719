<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  <div>
    <h1>Add Notes:</h1>
    <%= f.fields_for :notes do |notes_form|%>
      <%= notes_form.label :content%>
      <%= notes_form.text_field :content %>
      <br>
    <% end %>
  </div>
  <%= f.submit %>
<% end %>


