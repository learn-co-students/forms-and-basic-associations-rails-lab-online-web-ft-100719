<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :genre_id %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name")%>
  
  <%= f.fields_for :notes do |note_field| %>
    <%= note_field.label :note %>
    <%= note_field.text_area :content, rows: 5, cols: 50 %>
  <% end %>


  <%= f.submit %>
<% end %>


