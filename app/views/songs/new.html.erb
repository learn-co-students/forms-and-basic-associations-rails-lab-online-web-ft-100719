<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %>
  <p><%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <p><%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <p><%= f.fields_for :notes do |n| %> 
    <%= n.label :content %>
    <%= n.text_area :content %>
  <% end %>

  <p><%= f.submit %>
<% end %>


