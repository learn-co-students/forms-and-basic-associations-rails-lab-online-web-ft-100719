<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <%= f.label :genre_id %>
  <%= f.text_field :genre_id, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.id %>"><%= genre.name %></option>
    <% end %>
  </datalist>
  <%= f.label :notes %>
    <input type="text" id="song_notes_attributes_0_content" name="song[note_contents][]">
    <input type="text" id="song_notes_attributes_1_content" name="song[note_contents][]">
  <br />

  <%= f.submit %>
<% end %>


